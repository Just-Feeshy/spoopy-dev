<?xml version="1.0" encoding="utf-8"?>
<extension>
    <templatePath name="templates" />

    <haxelib name="lime" unless="create" />

    <section unless="spoopy-vulkan">
        <class remove="spoopy.backend.vulkan.SpoopyNativeSurface" />
        <class remove="spoopy.backend.vulkan.SpoopyNativeWindowSurface" />
        <class remove="spoopy.backend.vulkan.SpoopyNativeApplication" />

        <class remove="spoopy.graphics.vulkan.SpoopySwapChain" />
    </section>

    <section unless="spoopy-metal">
        <class remove="spoopy.backend.metal.SpoopyNativeSurface" />
    </section>
</extension>